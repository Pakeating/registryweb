// El frontmatter debe estar vacío. Toda la lógica es del lado del cliente.
---

<div class="login-container">
    <div class="login-box">
        <h2 class="login-title">Bienvenido a RegistryWeb</h2>
        
        <div id="google-signin-container" class="google-signin-container">
            <button id="login-google" class="login-google">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg" alt="Google logo" class="google-logo" />
                <span>Iniciar Sesión con Google</span>
            </button>
        </div>
    </div>
</div>

<script>
    import { GoogleAuthProvider, signInWithPopup, setPersistence, browserLocalPersistence } from "firebase/auth";
    import { auth } from "../firebase/config";

    const loginButton = document.getElementById('login-google');

    if (loginButton) {
        loginButton.addEventListener('click', async () => {
            const provider = new GoogleAuthProvider();
            try {
                await setPersistence(auth, browserLocalPersistence);
                const result = await signInWithPopup(auth, provider);
                console.log("Inicio de sesión exitoso, redirigiendo...", result.user.uid);
                window.location.href = '/';

            } catch (error) {
                console.error("Error durante el inicio de sesión con Google:", error);
            }
        });
    }
</script>

<style>
    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: #f5f5f4;
    }

    .login-box {
        max-width: 28rem;
        width: 100%;
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    }

    .login-title {
        font-size: 1.75rem; /* Aumentado de 1.5rem a 1.75rem */
        font-weight: 700;
        text-align: center;
        color: #292524;
        margin-bottom: 1.5rem;
    }

    .google-signin-container {
        text-align: center;
    }

    /* Estilos mejorados y más grandes para el botón de Google */
    .login-google {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem; /* 12px */
        width: 100%;
        padding: 0.8rem 1rem; /* Padding vertical aumentado */
        background-color: #ffffff;
        color: #444444;
        font-weight: 500;
        font-size: 16px; /* Tamaño de fuente aumentado */
        border: 1px solid #dadce0;
        border-radius: 0.375rem;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out;
    }

    .login-google:hover {
        background-color: #f8f9fa;
        border-color: #d2d3d4;
    }

    .login-google:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgba(66, 133, 244, 0.3);
    }

    .google-logo {
        width: 22px; /* Tamaño del logo aumentado */
        height: 22px; /* Tamaño del logo aumentado */
    }
</style>
