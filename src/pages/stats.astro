---
import Layout from '../layouts/Layout.astro';
import StatsDashboard from '../components/StatsDashboard.astro';
---

<Layout title="Estadísticas">
    <main class="stats-container">
        <StatsDashboard />

    </main>
</Layout>

<style>
    .stats-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 1rem 1.5rem;
    }

    .stats-title {
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin: 2rem 0;
    }

    .stats-description {
        text-align: center;
        font-size: 1.125rem;
        margin-bottom: 2.5rem;
        max-width: 60ch;
        margin-left: auto;
        margin-right: auto;
        color: #57534E; /* Tono de gris suave para el texto descriptivo */
    }

    /* Media Query para pantallas más pequeñas */
    @media (max-width: 768px) {
        .stats-title {
            font-size: 2rem;
        }

        .stats-description {
            font-size: 1rem;
        }

        .stats-container {
            padding: 1rem;
        }
    }
</style>
